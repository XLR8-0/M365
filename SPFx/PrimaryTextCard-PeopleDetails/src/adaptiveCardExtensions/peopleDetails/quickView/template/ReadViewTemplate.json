{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "15px",
                    "items": [
                        {
                            "type": "Image",
                            "url": "data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 2048 2048\"><path d=\"M1443 2045L421 1024 1443 3l90 90-930 931 930 931-90 90z\"></path></svg>",
                            "selectAction": {
                                "type": "Action.Submit",
                                "title": "Previous",
                                "data": {
                                    "id": "Previous"
                                }
                            }
                        }
                    ],
                    "verticalContentAlignment": "Top",
                    "style": "default"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${people.title}",
                            "size": "Medium",
                            "weight": "Bolder"
                        },
                        {
                            "type": "TextBlock",
                            "text": "${people.email}",
                            "size": "Medium"
                        },
                        {
                            "type": "TextBlock",
                            "text": "Job Title: ${people.jobTitle}",
                            "size": "Medium"
                        },
                        {
                            "type": "TextBlock",
                            "text": "Country: ${people.country}",
                            "size": "Medium"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "15px",
                    "items": [
                        {
                            "type": "Image",
                            "url": "data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 2048 2048\"><path d=\"M515 1955l930-931L515 93l90-90 1022 1021L605 2045l-90-90z\"></path></svg>",
                            "selectAction": {
                                "type": "Action.Submit",
                                "title": "Next",
                                "data": {
                                    "id": "Next"
                                }
                            }
                        }
                    ],
                    "verticalContentAlignment": "Top"
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "Image",
                            "url": "data:image/svg+xml;base64,",
                            "horizontalAlignment": "Center",
                            "size": "Small",
                            "width": "45px",
                            "selectAction": {
                                "type": "Action.Submit",
                                "id": "Update",
                                "title": "Update",
                                "tooltip": "Update",
                                "data": {
                                    "id": "Update",
                                    "itemId": "${people.id}"
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "Image",
                            "url": "data:image/svg+xml;base64,",
                            "horizontalAlignment": "Center",
                            "size": "Small",
                            "width": "40px",
                            "selectAction": {
                                "type": "Action.Submit",
                                "id": "Delete",
                                "title": "Delete",
                                "tooltip": "Delete",
                                "data": {
                                    "id": "Delete",
                                    "itemId": "${people.id}"
                                }
                            },
                            "backgroundColor": "\t#D22B2B",
                            "style": "Person"
                        }
                    ]
                }
            ],
            "separator": true,
            "bleed": true
        }
    ]
}